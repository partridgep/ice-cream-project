<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <!-- Materialize Icons -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel='stylesheet' href='/css/style.css' />
  <title>Ice Cream Selector</title>
</head>
<body>

  <nav>
    <ul>
      <li><a href="/">Home</a></li>
      <li>
        <% if (user) { %>
          <a href='/logout'><i class="material-icons left">trending_flat</i>Log Out</a>
        <% } else { %>
          <a href="/auth/google"><i class="material-icons left">vpn_key</i>Login with Google</a>
        <% } %>
      </li>
    </ul>
  </nav>

  <h1>Flavor Selector</h1>

  <% let listOfFlavors = [] %>

  <% iceCreams.forEach(function(i) { %>
    <% if (!listOfFlavors.includes(i.flavorName)) { %>
      <a href="/<%= i._id %>">
        <div class='flavor-selector'>
            <img src='<%= i.flavorImage %>'>
            <p><%= i.flavorName %></p>
        </div>
      </a>
      <% listOfFlavors.push(i.flavorName); %>
    <% } %>
    <% }); %>

</body>
</html>